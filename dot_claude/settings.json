{
  "cleanupPeriodDays": 7,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"Claude Code: \" + (.message // \"Needs attention\")' | xargs -0 notify-send 'Claude Code'",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Sganassando",
      "Ciapando",
      "Sbatociando",
      "Magnando",
      "Tociando",
      "Sbregando",
      "Ingrumando",
      "Sbolsegando",
      "Ingropando",
      "Smanegando",
      "Strucando",
      "Imbrojando",
      "Tacando",
      "Scampando",
      "Porconando",
      "Sbrissando",
      "Bajando",
      "Pareciando"
    ]
  }
}
