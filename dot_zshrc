# Path
export PATH=/opt/nvim-linux-x86_64/bin:$PATH
export PATH=/$HOME/.config/scripts:$PATH
export PATH=/opt/webp:$PATH
export PATH=/$HOME/.dotnet:/$HOME/.dotnet/tools:$PATH
export PATH="$HOME/.aspire/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"

# Environment Variables
export DOTNET_ROOT=$HOME/.dotnet
export KUBECONFIG=~/.kube/config
export ZSH="$HOME/.oh-my-zsh"
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
eval "$(fnm env)"

# Custom environment variables
if [ -f ~/.config/environment ]; then
    source ~/.config/environment
fi

# Oh My Zsh Configuration
ZSH_THEME="robbyrussell"
plugins=(git zsh-autosuggestions zsh-syntax-highlighting zsh-vi-mode kubectl)
source $ZSH/oh-my-zsh.sh

# Alias
alias v="nvim"
alias lg="lazygit"
alias yz="yazi"
alias bat="batcat"
alias tn="tmux new-session -s"
t() { tmux new-session -s "$(basename "$PWD")"; }
_claude_tmux() {
  local name="$(basename "$PWD")"
  if tmux has-session -t "$name" 2>/dev/null; then
    tmux attach-session -t "$name"
  else
    tmux new-session -s "$name" -n claude "$1" \; \
      set-option -w automatic-rename off
  fi
}
cc() { _claude_tmux "claude"; }
ccd() { _claude_tmux "claude --plugin-dir ~/Repos/ccflow/"; }
alias tl="tmux list-sessions"
alias ta="tmux attach-session"
alias kubectl="k3s kubectl"

# zoxide initialization
eval "$(zoxide init zsh)"

# direnv â€” per-directory environment overrides
if command -v direnv &>/dev/null; then
  eval "$(direnv hook zsh)"
fi

# Load Angular CLI autocompletion.
source <(ng completion script)

claude() {
	command claude "$@"
	~/.config/tmux/scripts/claude-tmux-state.sh clear
}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	command yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ "$cwd" != "$PWD" ] && [ -d "$cwd" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}
